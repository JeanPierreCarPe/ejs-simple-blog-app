<form action="/compose" method="post">
  <div class="mb-3">
    <label class="form-label" for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" />
  </div>
  <div class="mb-3">
    <label class="form-label" for="postTitle">Post</label>
    <textarea class="form-control" name="postContent" rows="5" cols="30"></textarea>
  </div>
